<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D6D6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/popupbg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/reservetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Rezerwacja"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reservedesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_16sdp"
            android:text="Czy na pewno chcesz zarezerwować tę książkę?"
            android:textColor="#72777A"
            android:textSize="16sp" />

        <Button
            android:id="@+id/yesButton"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#AA40FD"
            android:text="Pewnie!" />

        <Button
            android:id="@+id/noButton"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:backgroundTint="@color/white"
            android:text="Nie, dzięki"
            android:textColor="#6B4EFF"
            style="?android:attr/borderlessButtonStyle"/>


    </LinearLayout>


</RelativeLayout>